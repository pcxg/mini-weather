<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true">
    <!--污染数字和图片-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pm25_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pm25_detail"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pm25_level_title"
                android:text="PM2.5"
                android:textSize="13.0sp"
                android:textColor="@android:color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pm25_level_num"
                android:text="100"
                android:textSize="30.0sp"
                android:textColor="@android:color/white"
                android:layout_below="@+id/pm25_level_title"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pm25_level_img"
            android:layout_toRightOf="@+id/pm25_detail"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:src="@drawable/biz_plugin_weather_0_50"/>
    </RelativeLayout>
    <!--污染程度-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pm25_level"
        android:gravity="center"
        android:text="重度污染"
        android:textSize="20.0sp"
        android:textColor="@android:color/white"
        />
</LinearLayout>